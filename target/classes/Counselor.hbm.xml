<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	 <class name="org.iiitb.courseproject.model.Counselor" table="Counselor">
	 
      <meta attribute = "class-description">
         This class contains the Counselor detail. 
      </meta>
      
      <id name = "idCounselor" type = "int" column = "idCounselor">
         <generator class="native"/>
      </id>
      
      <property name = "Counseloremail" column = "Counseloremail" type = "string"/>
      <property name = "name" column = "name" type = "string"/>
      <property name = "password" column = "password" type = "string"/>
     
	</class>
	
</hibernate-mapping>